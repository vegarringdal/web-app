{
    "name": "web-update-source",
    "dockerImage": "something/awsome",
    "version": "0.0.0",
    "description": "App for updateing data based on yaml config",
    "scripts": {
        "gitclone": "run-s -s -n clone:*",
        "clone:app-backend": "git clone https://github.com/vegarringdal/web-app-backend app-backend",
        "clone:app-frontend": "git clone https://github.com/vegarringdal/web-app-frontend app-frontend",
        "clone:app-common": "git clone https://github.com/vegarringdal/web-app-common app-common",
        "clone:app-guitools": "git clone https://github.com/vegarringdal/web-app-guitools app-guitools",
        "start": "run-p -s -l start:*",
        "start:app-backend": "npm run start -w app-backend",
        "start:app-frontend": "npm run start -w app-frontend",
        "start:typechecker": "npm run typecheck:watch",
        "build": "run-s -s -n build:*",
        "build:app-backend": "npm run build -w app-backend",
        "build:app-frontend": "npm run build -w app-frontend",
        "serve": "node ./app-backend/dist/index",
        "serve-env": "node -r dotenv/config ./app-backend/dist/index.js",
        "eslint": "run-s -s -n eslint:nofix:*",
        "eslint:nofix:app-backend": "npm run eslint -w app-backend",
        "eslint:nofix:app-frontend": "npm run eslint -w app-frontend",
        "eslint:nofix:app-common": "npm run eslint -w app-common",
        "eslint:fix": "run-s -s -n eslint:fix:*",
        "eslint:fix:app-backend": "npm run eslint:fix -w app-backend",
        "eslint:fix:app-frontend": "npm run eslint:fix -w app",
        "eslint:fix:app-common": "npm run eslint:fix -w app-common",
        "test": "run-s -s -n test:*",
        "testing": "run-s -s -n test:*",
        "testing:app-backend": "npm run testing -w app-backend",
        "testing:app-frontend": "npm run testing -w app-frontend",
        "testing:app-common": "npm run testing -w app-common",
        "testing:app-tools": "npm run testing -w app-tools",
        "test:app-backend": "npm run test -w app-backend",
        "test:app-frontend": "npm run test -w app-frontend",
        "test:app-common": "npm run test -w app-common",
        "test:app-tools": "npm run test -w app-tools",
        "prettier": "run-s -s -n prettier:*",
        "prettier:json": "prettier --write  \"./**/*.json\"",
        "prettier:ts": "prettier --write  \"./**/*.ts\"",
        "prettier:js": "prettier --write  \"./**/*.js\"",
        "prettier:tsx": "prettier --write  \"./**/*.tsx\"",
        "typecheck": "ts-node ./typecheck.ts",
        "typecheck:watch": "ts-node ./typecheck_watch.ts",
        "release": "standard-version",
        "release:test": "standard-version --dry-run",
        "release:major": "standard-version --release-as major",
        "prepare": "husky install",
        "ci": "run-s -s -n ci:*",
        "ci:test": "npm run test",
        "ci:eslint": "npm run eslint",
        "ci:typecheck": "npm run typecheck",
        "docker:build": "node ./scripts/buildDocker",
        "docker:push": "node ./scripts/pushDocker",
        "docker:run": "node ./scripts/runDocker"
    },
    "keywords": [],
    "author": "vegar.ringdal@gmail.com",
    "license": "PRIVATE",
    "workspaces": [
        "app-backend",
        "app-common",
        "app-guitools",
        "app-frontend"
    ],
    "devDependencies": {
        "@commitlint/cli": "^16.2.3",
        "@commitlint/config-conventional": "^16.2.1",
        "@types/jest": "^27.4.1",
        "jest": "^27.5.1",
        "ts-jest": "^27.1.4",
        "husky": "^7.0.4",
        "lint-staged": "^12.4.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.6.2",
        "standard-version": "^9.3.2",
        "ts-node": "^10.7.0"
    }
}
