{
    "name": "web-update-source",
    "dockerImage": "something/awsome",
    "version": "0.0.0",
    "description": "App template",
    "scripts": {
        "pull": "run-s -s -n pull:*",
        "pull:rad-root": "git pull",
        "pull:rad-backend": "cd rad-backend & git pull",
        "pull:rad-common": "cd rad-common & git pull",
        "pull:rad-guitools": "cd rad-guitools & git pull",
        "clone": "npm run clone_rad_backend && npm run clone_rad_frontend && npm run clone_rad_common && npm run clone_rad_guitools",
        "clone_rad_backend": "git clone https://github.com/vegarringdal/web-rad-backend rad-backend",
        "clone_rad_common": "git clone https://github.com/vegarringdal/web-rad-common rad-common",
        "clone_rad_guitools": "git clone https://github.com/vegarringdal/web-rad-guitools rad-guitools",
        "start": "run-p -s -l start:*",
        "start:rad-backend": "npm run start -w rad-backend",
        "start:rad-frontend": "npm run start -w rad-frontend",
        "start:typechecker": "npm run typecheck:watch",
        "build": "run-s -s -n build:*",
        "build:rad-backend": "npm run build -w rad-backend",
        "build:rad-frontend": "npm run build -w rad-frontend",
        "serve": "node ./rad-backend/dist/index",
        "serve-env": "node -r dotenv/config ./rad-backend/dist/index.js",
        "eslint": "run-s -s -n eslint:nofix:*",
        "eslint:nofix:rad-backend": "npm run eslint -w rad-backend",
        "eslint:nofix:rad-frontend": "npm run eslint -w rad-frontend",
        "eslint:nofix:rad-common": "npm run eslint -w rad-common",
        "eslint:nofix:rad-guitools": "npm run eslint -w rad-guitools",
        "eslint:fix": "run-s -s -n eslint:fix:*",
        "eslint:fix:rad-backend": "npm run eslint:fix -w rad-backend",
        "eslint:fix:rad-frontend": "npm run eslint:fix -w rad-frontend",
        "eslint:fix:rad-common": "npm run eslint:fix -w rad-common",
        "eslint:fix:rad-guitools": "npm run eslint -w rad-guitools",
        "test": "run-s -s -n test:*",
        "testing": "run-s -s -n test:*",
        "testing:rad-backend": "npm run testing -w rad-backend",
        "testing:rad-frontend": "npm run testing -w rad-frontend",
        "testing:rad-common": "npm run testing -w rad-common",
        "testing:rad-tools": "npm run testing -w rad-tools",
        "test:rad-backend": "npm run test -w rad-backend",
        "test:rad-frontend": "npm run test -w rad-frontend",
        "test:rad-common": "npm run test -w rad-common",
        "test:rad-tools": "npm run test -w rad-tools",
        "prettier": "run-s -s -n prettier:*",
        "prettier:json": "prettier --write  \"./**/*.json\"",
        "prettier:ts": "prettier --write  \"./**/*.ts\"",
        "prettier:js": "prettier --write  \"./**/*.js\"",
        "prettier:tsx": "prettier --write  \"./**/*.tsx\"",
        "typecheck": "ts-node ./typecheck.ts",
        "typecheck:watch": "ts-node ./typecheck_watch.ts",
        "release": "standard-version",
        "release:test": "standard-version --dry-run",
        "release:major": "standard-version --release-as major",
        "prepare": "husky install",
        "ci": "run-s -s -n ci:*",
        "ci:test": "npm run test",
        "ci:eslint": "npm run eslint",
        "ci:typecheck": "npm run typecheck",
        "docker:build": "node ./scripts/buildDocker",
        "docker:push": "node ./scripts/pushDocker",
        "docker:run": "node ./scripts/runDocker"
    },
    "keywords": [],
    "author": "vegar.ringdal@gmail.com",
    "license": "PRIVATE",
    "workspaces": [
        "rad-backend",
        "rad-common",
        "rad-guitools",
        "rad-frontend"
    ],
    "devDependencies": {
        "@commitlint/cli": "^16.2.3",
        "@commitlint/config-conventional": "^16.2.1",
        "@types/jest": "^27.4.1",
        "jest": "^27.5.1",
        "ts-jest": "^27.1.4",
        "husky": "^7.0.4",
        "lint-staged": "^12.4.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.6.2",
        "standard-version": "^9.3.2",
        "ts-node": "^10.7.0"
    }
}
